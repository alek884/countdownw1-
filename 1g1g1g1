<script>
(function(){
const target = new Date(2025,11,19,0,0,0);
const start = new Date();
const el = {
 months: document.getElementById('months'),
 weeks: document.getElementById('weeks'),
 days: document.getElementById('days'),
 hours: document.getElementById('hours'),
 minutes: document.getElementById('minutes'),
 seconds: document.getElementById('seconds'),
 daysGrid: document.getElementById('daysGrid'),
 note: document.getElementById('note'),
 progressBar: document.getElementById('progress-bar'),
 progressText: document.getElementById('progress-text'),
 messageBox: document.getElementById('message-box'),
 tiles: ['tile-months','tile-weeks','tile-days','tile-hours','tile-minutes','tile-seconds'].map(id=>document.getElementById(id))
};
const weekdayNames=['Sun','Mon','Tue','Wed','Thu','Fri','Sat'];
weekdayNames.forEach(name=>{
 const h=document.createElement('div'); h.textContent=name; h.style.fontWeight='700'; h.style.opacity='.8'; el.daysGrid.appendChild(h);
});
function buildCalendar(){
 while(el.daysGrid.children.length>7) el.daysGrid.removeChild(el.daysGrid.lastChild);
 const year=2025, month=11;
 const first=new Date(year,month,1), last=new Date(year,month+1,0);
 const startWeekday=first.getDay(), totalDays=last.getDate();
 const today=new Date();
 const todayYMD=`${today.getFullYear()}-${today.getMonth()}-${today.getDate()}`;
 for(let i=0;i<startWeekday;i++){el.daysGrid.appendChild(document.createElement('div'));}
 for(let d=1;d<=totalDays;d++){
  const cell=document.createElement('div');
  const cur=new Date(year,month,d);
  const weekday=cur.getDay();
  cell.className='day-cell '+(weekday===0||weekday===6?'weekend':'weekday');
  if(d===19) cell.classList.add('target');
  if(`${cur.getFullYear()}-${cur.getMonth()}-${cur.getDate()}`===todayYMD) cell.classList.add('today');
  const label=document.createElement('div'); label.className='day-label'; label.textContent=d; cell.appendChild(label);
  if(d===19){const note=document.createElement('small'); note.textContent='Target'; note.style.marginTop='6px'; note.style.opacity='.95'; cell.appendChild(note);}
  el.daysGrid.appendChild(cell);
 }
}
function getBreakdown(now,to){
 if(now>=to) return {months:0,weeks:0,days:0,hours:0,minutes:0,seconds:0,done:true};
 let months=(to.getFullYear()-now.getFullYear())*12+(to.getMonth()-now.getMonth());
 const tmp=new Date(now.getTime()); tmp.setMonth(tmp.getMonth()+months);
 if(tmp>to){months--; tmp.setMonth(tmp.getMonth()-1);}
 let remainder=to-tmp;
 const weekMs=7*24*60*60*1000, dayMs=24*60*60*1000, hourMs=60*60*1000, minMs=60*1000;
 const weeks=Math.floor(remainder/weekMs); remainder-=weeks*weekMs;
 const days=Math.floor(remainder/dayMs); remainder-=days*dayMs;
 const hours=Math.floor(remainder/hourMs); remainder-=hours*hourMs;
 const minutes=Math.floor(remainder/minMs); remainder-=minutes*minMs;
 const seconds=Math.floor(remainder/1000);
 return {months,weeks,days,hours,minutes,seconds,done:false};
}
function pad(n){return String(n).padStart(2,'0');}
function updateProgress(now,to){
 const total=to-start; const elapsed=now-start;
 const percent=Math.min(100,(elapsed/total*100).toFixed(2));
 el.progressBar.style.width=percent+'%'; el.progressText.textContent=percent+'%';
}
function updateMessage(now){
 const day=now.getDay();
 if(day===5){el.messageBox.style.display='block'; el.messageBox.textContent='Friday prayer: ðŸ™ Stay calm and grateful!';}
 else if(day===6||day===0){el.messageBox.style.display='block'; el.messageBox.textContent='Weekend response: ðŸ˜‚ Praying for a break!';}
 else{el.messageBox.style.display='none';}
}
function tick(){
 const now=new Date();
 const b=getBreakdown(now,target);
 el.months.textContent=b.months;
 el.weeks.textContent=b.weeks;
 el.days.textContent=b.days;
 el.hours.textContent=pad(b.hours);
 el.minutes.textContent=pad(b.minutes);
 el.seconds.textContent=pad(b.seconds);
 el.tiles.forEach(t=>t.classList.toggle('glow'));
 updateProgress(now,target);
 updateMessage(now);
 if(b.done){el.note.textContent='ðŸŽ‰ The target date has arrived!'; clearInterval(interval);}
 else{el.note.textContent='Current time: '+now.toLocaleString()+' â€” Target: '+target.toLocaleString();}
}
buildCalendar();
const interval=setInterval(tick,1000);
tick();
})();
</script>
</body>
